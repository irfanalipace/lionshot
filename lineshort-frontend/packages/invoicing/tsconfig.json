// Build Config

{
	"compilerOptions": {
		"skipLibCheck": true,
		"jsx": "preserve",
		"preserveSymlinks": true,
		"declaration": false,
		"allowJs": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "ESNext",
		"outDir": "./dist",
		"lib": ["ESNext", "dom"],
		"moduleResolution": "Node",
		"sourceMap": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"strict": false,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["."],
	"exclude": ["dist", "node_modules"]
}
